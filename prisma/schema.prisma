// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// System users (for login/authentication)
model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String   // Hashed password
  role      String   @default("admin") // admin, manager, staff
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([username])
  @@index([email])
}

// Staff members (waiters, managers, etc.)
model Staff {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  phone     String?
  role      String   // waiter, manager, bartender, kitchen_staff
  pin       String   // PIN for quick login
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  assignedTables Table[]
  orders         Order[]
  
  @@index([role])
}

// Restaurant sections (for organizing large space)
model Section {
  id          String  @id @default(cuid())
  name        String
  description String?
  capacity    Int     // Total capacity of section
  active      Boolean @default(true)
  
  tables Table[]
  
  @@index([name])
}

// Dining tables
model Table {
  id          String   @id @default(cuid())
  number      Int      @unique
  capacity    Int      // Max guests
  sectionId   String
  status      String   @default("available") // available, occupied, reserved, cleaning
  currentGuests Int    @default(0)
  qrCode      String?  @unique // QR code token for buzzer system
  
  section     Section  @relation(fields: [sectionId], references: [id])
  reservations Reservation[]
  orders      Order[]
  assignedWaiterId String?
  assignedWaiter Staff? @relation(fields: [assignedWaiterId], references: [id])
  buzzerRequests BuzzerRequest[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status])
  @@index([sectionId])
}

// Reservations
model Reservation {
  id            String   @id @default(cuid())
  customerName  String
  customerPhone String
  customerEmail String?
  partySize     Int
  tableId       String?
  table         Table?   @relation(fields: [tableId], references: [id])
  reservationTime DateTime
  status        String   @default("pending") // pending, confirmed, seated, cancelled, completed
  specialRequests String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([reservationTime])
  @@index([status])
}

// Menu categories
model MenuCategory {
  id          String   @id @default(cuid())
  name        String
  nameTr      String?  // Turkish name
  description String?
  type        String   // food, drink, shisha, cocktail
  displayOrder Int     @default(0)
  active      Boolean  @default(true)
  
  items       MenuItem[]
  
  @@index([type])
  @@index([displayOrder])
}

// Menu items (food, drinks, shisha, cocktails)
model MenuItem {
  id          String   @id @default(cuid())
  name        String
  nameTr      String?  // Turkish name
  description String?
  descriptionTr String? // Turkish description
  categoryId  String
  category    MenuCategory @relation(fields: [categoryId], references: [id])
  price       Float
  image       String?
  available   Boolean  @default(true)
  preparationTime Int?  // minutes
  displayOrder Int     @default(0)
  
  orderItems  OrderItem[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([categoryId])
  @@index([available])
}

// Orders
model Order {
  id            String   @id @default(cuid())
  tableId       String
  table         Table    @relation(fields: [tableId], references: [id])
  staffId       String
  staff         Staff    @relation(fields: [staffId], references: [id])
  status        String   @default("pending") // pending, preparing, ready, served, completed, cancelled
  orderType     String   @default("dine_in") // dine_in, takeaway, delivery
  subtotal      Float    @default(0) // Subtotal before VAT
  vatRate       Float    @default(20.0) // VAT rate percentage (20% UK standard)
  vatAmount     Float    @default(0) // VAT amount
  tax           Float    @default(0) // Legacy field (keeping for compatibility)
  serviceCharge Float    @default(0)
  discount      Float    @default(0)
  total         Float    @default(0) // Total including VAT
  notes         String?
  
  items         OrderItem[]
  payments      Payment[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([tableId])
  @@index([status])
  @@index([createdAt])
}

// Order items
model OrderItem {
  id            String   @id @default(cuid())
  orderId       String
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId    String
  menuItem      MenuItem @relation(fields: [menuItemId], references: [id])
  quantity      Int      @default(1)
  price         Float    // Price at time of order
  status        String   @default("pending") // pending, preparing, ready, served
  specialInstructions String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([orderId])
  @@index([status])
}

// Payments
model Payment {
  id            String   @id @default(cuid())
  orderId       String
  order         Order    @relation(fields: [orderId], references: [id])
  amount        Float
  method        String   // cash, card, digital_wallet
  status        String   @default("completed") // pending, completed, refunded
  transactionId String?
  
  createdAt     DateTime @default(now())
  
  @@index([orderId])
  @@index([status])
}

// Buzzer requests from customers
model BuzzerRequest {
  id            String   @id @default(cuid())
  tableId       String
  table         Table    @relation(fields: [tableId], references: [id])
  requestType   String   // waiter, food, shisha, bill, service
  status        String   @default("pending") // pending, acknowledged, completed
  acknowledgedBy String? // Staff ID who acknowledged
  acknowledgedAt DateTime?
  completedAt   DateTime?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([tableId])
  @@index([status])
  @@index([createdAt])
  @@index([requestType])
}

// Suppliers (for purchase management)
model Supplier {
  id          String   @id @default(cuid())
  name        String
  vatNumber   String?  // UK VAT registration number
  address     String?
  phone       String?
  email       String?
  contactName String?
  active      Boolean  @default(true)
  
  purchases   Purchase[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([name])
  @@index([vatNumber])
}

// Purchases (expenses, stock, etc.)
model Purchase {
  id            String   @id @default(cuid())
  supplierId    String
  supplier      Supplier @relation(fields: [supplierId], references: [id])
  invoiceNumber String?
  date          DateTime
  category      String   // stock, equipment, utilities, rent, other
  description   String?
  subtotal      Float    // Amount before VAT
  vatRate       Float    @default(20.0) // VAT rate percentage
  vatAmount     Float    // VAT amount
  total         Float    // Total including VAT
  notes         String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([supplierId])
  @@index([date])
  @@index([category])
}

// VAT Rates configuration
model VATRate {
  id          String   @id @default(cuid())
  rate        Float    // 20.0, 0.0, etc.
  name        String   // "Standard", "Zero-rated", "Exempt"
  description String?
  active      Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([rate])
}

// Tax Periods (quarters for VAT returns)
model TaxPeriod {
  id          String   @id @default(cuid())
  startDate   DateTime
  endDate     DateTime
  quarter     Int      // 1, 2, 3, 4
  year        Int
  status      String   @default("open") // open, closed, submitted
  notes       String?
  
  vatReturns VATReturn[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([startDate])
  @@index([endDate])
  @@index([year, quarter])
}

// VAT Returns (quarterly submissions)
model VATReturn {
  id          String   @id @default(cuid())
  taxPeriodId String
  taxPeriod   TaxPeriod @relation(fields: [taxPeriodId], references: [id])
  outputVAT   Float    @default(0) // VAT on sales (output VAT)
  inputVAT    Float    @default(0) // VAT on purchases (input VAT)
  vatDue      Float    @default(0) // Output VAT - Input VAT
  submittedAt DateTime?
  submittedBy String?  // User ID who submitted
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([taxPeriodId])
  @@index([submittedAt])
}

// Accounting Settings (VAT registration, company info, etc.)
model AccountingSettings {
  id                String   @id @default(cuid())
  vatRegistrationNumber String?  // UK VAT registration number (e.g., GB123456789)
  companyName       String?
  companyAddress    String?
  companyPhone      String?
  companyEmail      String?
  accountingYearStart Int     @default(1) // Month (1-12) when accounting year starts
  standardVATRate   Float    @default(20.0) // Standard VAT rate percentage
  zeroRatedVATRate  Float    @default(0.0) // Zero-rated VAT rate
  exemptVATRate     Float    @default(0.0) // Exempt VAT rate
  serviceChargeRate Float    @default(10.0) // Service charge percentage
  currency          String   @default("GBP")
  currencySymbol    String   @default("Â£")
  
  updatedBy         String?  // User ID who last updated
  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())
  
  @@unique([id])
}

// Audit Trail (for HMRC compliance - track all changes)
model AuditLog {
  id          String   @id @default(cuid())
  entityType  String   // "Order", "Purchase", "VATReturn", etc.
  entityId    String   // ID of the entity
  action      String   // "create", "update", "delete", "submit"
  userId      String?  // User who performed the action
  userName    String?  // User name for reference
  changes     String?  // JSON string of changes
  ipAddress   String?
  userAgent   String?
  
  createdAt   DateTime @default(now())
  
  @@index([entityType, entityId])
  @@index([userId])
  @@index([createdAt])
  @@index([action])
}
