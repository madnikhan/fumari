// PostgreSQL version of the schema for production deployment
// Copy this to schema.prisma when deploying to production with PostgreSQL

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// System users (for login/authentication)
model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String   // Hashed password
  role      String   @default("admin") // admin, manager, staff
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([username])
  @@index([email])
}

// Staff members (waiters, managers, etc.)
model Staff {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  phone     String?
  role      String   // waiter, manager, bartender, kitchen_staff
  pin       String   // PIN for quick login
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  assignedTables Table[]
  orders         Order[]
  
  @@index([role])
}

// Restaurant sections (for organizing large space)
model Section {
  id          String  @id @default(cuid())
  name        String
  description String?
  capacity    Int     // Total capacity of section
  active      Boolean @default(true)
  
  tables Table[]
  
  @@index([name])
}

// Dining tables
model Table {
  id            String   @id @default(cuid())
  number        Int      @unique
  capacity      Int
  status        String   @default("available") // available, occupied, reserved, cleaning
  currentGuests Int      @default(0)
  sectionId     String
  section       Section  @relation(fields: [sectionId], references: [id])
  assignedWaiterId String?
  assignedWaiter Staff?  @relation(fields: [assignedWaiterId], references: [id])
  
  reservations Reservation[]
  orders        Order[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([sectionId])
  @@index([status])
  @@index([assignedWaiterId])
}

// Reservations
model Reservation {
  id              String   @id @default(cuid())
  customerName    String
  customerPhone   String
  customerEmail   String?
  partySize       Int
  reservationTime DateTime
  status          String   @default("pending") // pending, confirmed, seated, completed, cancelled
  specialRequests String?
  tableId         String?
  table           Table?   @relation(fields: [tableId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([reservationTime])
  @@index([status])
  @@index([tableId])
}

// Menu categories
model MenuCategory {
  id          String   @id @default(cuid())
  name        String
  nameTr      String?  // Turkish name
  description String?
  type        String   // food, drink, shisha, cocktail
  displayOrder Int     @default(0)
  active      Boolean  @default(true)
  
  items       MenuItem[]
  
  @@index([type])
  @@index([displayOrder])
}

// Menu items (food, drinks, shisha, cocktails)
model MenuItem {
  id          String   @id @default(cuid())
  name        String
  nameTr      String?  // Turkish name
  description String?
  descriptionTr String? // Turkish description
  categoryId  String
  category    MenuCategory @relation(fields: [categoryId], references: [id])
  price       Float
  image       String?
  available   Boolean  @default(true)
  preparationTime Int?  // minutes
  displayOrder Int     @default(0)
  
  orderItems  OrderItem[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([categoryId])
  @@index([available])
}

// Orders
model Order {
  id            String   @id @default(cuid())
  tableId       String
  table         Table    @relation(fields: [tableId], references: [id])
  staffId       String
  staff         Staff    @relation(fields: [staffId], references: [id])
  status        String   @default("pending") // pending, preparing, ready, served, completed, cancelled
  orderType     String   @default("dine_in") // dine_in, takeaway, delivery
  customerName  String?
  customerPhone String?
  customerEmail String?
  subtotal      Float
  tax           Float    @default(0)
  discount      Float    @default(0)
  total         Float
  notes         String?
  
  items         OrderItem[]
  payments      Payment[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tableId])
  @@index([staffId])
  @@index([status])
  @@index([createdAt])
}

// Order items
model OrderItem {
  id                String   @id @default(cuid())
  orderId            String
  order              Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId         String
  menuItem           MenuItem @relation(fields: [menuItemId], references: [id])
  quantity           Int
  price              Float
  status             String   @default("pending") // pending, preparing, ready, served
  specialInstructions String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([orderId])
  @@index([menuItemId])
  @@index([status])
}

// Payments
model Payment {
  id            String   @id @default(cuid())
  orderId       String
  order         Order    @relation(fields: [orderId], references: [id])
  amount        Float
  method        String   // cash, card, digital_wallet
  status        String   @default("completed") // pending, completed, failed, refunded
  transactionId String?
  
  createdAt DateTime @default(now())
  
  @@index([orderId])
  @@index([status])
}

